{
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "never"
        ],
        /* Turning off some recommended rules. */
        "no-console": 0,
        "no-cond-assign": 0
    },
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended"
}